@page
@using Domain
@model WebApp.Pages.NewGame.Index

@{
    Layout = "Shared/_Layout";
    ViewData["Title"] = "New Game";
}

<!DOCTYPE html>

<html>
<head>
    <title>New Game</title>
</head>
<body>
<div class="text-center">
    <form method="post">
        <div>
            <h1 class="display-4">Choose board dimensions</h1>
            <br/>
        </div>
        <div class="form-row">
            <div class="col">
                <input asp-for="GameBoard.Height" class="form-control" placeholder="Height" required>
                <span asp-validation-for="GameBoard.Height" class="text-danger"></span>
            </div>
            <div class="col">
                <input asp-for="GameBoard.Width" class="form-control" placeholder="Width" required>
                <span asp-validation-for="GameBoard.Width" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group">
            <br/>
            <div class="form-row">
                <input asp-for="GameBoard.SaveGameName" class="form-control" placeholder="Game name" required>
                <span asp-validation-for="GameBoard.SaveGameName" class="text-danger">
                </span>
            </div>
        </div>
       
        <br/>
        <button type="submit" class="btn btn-outline-success btn-block">Start</button>
    </form>
</div>
</body>
</html>

@section Scripts{
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial"); }
}