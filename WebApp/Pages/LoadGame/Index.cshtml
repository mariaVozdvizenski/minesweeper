@page
@using Domain
@model WebApp.Pages.LoadGame.Index

@{
    Layout = "Shared/_Layout";
    ViewData["Title"] = "Load Game";
}

<!DOCTYPE html>

<html>
<head>
    <title></title>
</head>
<body>
<div class="container text-center">
    <h2 class="display-4">Choose a save</h2>
    <br/>
    <div class="list-group">
        @foreach (var gameBoard in Model.GameBoards)
        {
            <a asp-page="/PlayGame/Index" asp-route-id="@gameBoard.Id" class="list-group-item list-group-item-action">@gameBoard.SaveGameName</a>
        }
    </div>
</div>
</body>
</html>